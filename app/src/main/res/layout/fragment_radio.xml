<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".radio.RadioFragment"
    >


    <TextView
        android:id="@+id/my_islam_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="My Islam"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="#b7935f"
        android:layout_marginTop="30dp"/>
    <ImageView
        android:id="@+id/radio_image"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        app:layout_constraintTop_toBottomOf="@id/my_islam_word"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/mediaplayer"/>

    <ImageView
        android:id="@+id/quran_kareem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/radio_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/qurankareem"/>

    <ImageView
        android:id="@+id/next_radio_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/quran_kareem"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:src="@drawable/baseline_skip_next_24"/>

    <ImageView
        android:id="@+id/pre_radio_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/quran_kareem"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:src="@drawable/baseline_skip_previous_24"/>

    <ImageView
        android:id="@+id/pre_radio_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toEndOf="@id/pre_radio_image"
        app:layout_constraintEnd_toStartOf="@id/next_radio_image"
        app:layout_constraintTop_toBottomOf="@id/quran_kareem"
        android:src="@drawable/baseline_pause_24"
        android:layout_marginTop="15dp"
        android:layout_marginStart="100dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>